<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/sicredi_1" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/logo_fk_2015" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="0dp"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="Registrar"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="147dp"
        android:textColor="#fff"
        android:background="#65C734"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="380dp"
        android:hint="Usuário"
        android:text=""
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/serverLocalUrl"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="350dp"
        android:hint="Server URL : Porta"
        android:text="https://192.168.5.233"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/anyvisionUrl"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="300dp"
        android:hint="Anyvision URL : Porta"
        android:text="http://latam-sesame.anyvision.co:3000 "
        android:textAlignment="center"
        android:textSize="16dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="Entrar"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="226dp"
        android:textColor="#fff"
        android:background="#65C734"
        />

    <Button
        android:id="@+id/loginPanico"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="Pânico"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="430dp"
        android:textColor="#fff"
        android:background="#ff0000"

        />

    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sky"
        android:visibility="gone">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_fk_2015" />

        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Large.Wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/red"/>

    </FrameLayout>


</FrameLayout>
